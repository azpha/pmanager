{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist",

    /* Bundler mode */
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": ["node_modules"]
}